{
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/bin": true,
    "**/coverage": true
  },
  "html.format.wrapLineLength": 79,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "editor.formatOnSave": true,
  "files.associations": {
    ".env.defaults": "shellscript",
  },
  "material-icon-theme.files.associations": {
    ".env.defaults": "tune",
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  }
}
