{
  "name": "@sylver/json-http-client",
  "description": "Simple HTTP Client to interact with JSON APIs",
  "version": "1.0.0",
  "author": "Sylver <sylver@sylver.io>",
  "email": "sylver@sylver.io",
  "homepage": "https://github.com/sylver/json-http-client",
  "url": "https://github.com/sylver/json-http-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/sylver/json-http-client.git"
  },
  "bugs": {
    "url": "https://github.com/sylver/json-http-client/issues"
  },
  "license": "GPL-3.0",
  "keywords": [
    "typescript",
    "javascript",
    "ts",
    "js",
    "json",
    "http",
    "client",
    "rest",
    "api"
  ],
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "scripts": {
    "build": "run-p build:*",
    "build:all": "tsc -d",
    "release": "standard-version -s",
    "test": "run-s test:*",
    "test:ts": "tsc --noEmit",
    "test:lint": "eslint 'src/**/*.ts'",
    "test:unit": "mocha 'test/**/*.ts'",
    "coverage": "run-s coverage:*",
    "coverage:unit": "nyc --silent npm run test:unit",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "coverage:codecov": "codecov",
    "vulnerabilities": "snyk monitor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "eslint": "^7.4.0",
    "eslint-config-materya": "^5.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.19",
    "standard-version": "^8.0.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.1",
    "tsc-watch": "^4.2.3",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
